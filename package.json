        "graphql": "^16.0.0",
        "graphql-tag": "^2.12.5",
        "lodash": "^4.17.21",
        "next": "^12.0.1",
        "next-ga": "^2.3.4",
        "next-with-apollo": "^5.2.1",
        "nprogress": "^0.2.0",
        "postcss": "^8.3.11",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-i18next": "11.11.1",
        "tailwindcss": "^2.2.19"
    },

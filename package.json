{
    "name": "nextjs-next-boilerplate",
    "author": "Sila Rim",
    "email": "rimsila.itc@gmail.com",
    "version": "1.0.0",
    "private": true,
    "license": "MIT",
    "scripts": {
        "preinstall": "yarn ycom",
        "dev": "next",
        "prod": "next start",
        "dev:gen": "yarn codegen &&  next",
        "start": "yarn dev",
        "build": "next build",
        "build:export": "yarn build && next export",
        "codegen": "DOTENV_CONFIG_PATH=./.env graphql-codegen -r dotenv/config --config codegen.yml",
        "codegen:watch": "yarn codegen -- --watch",
        "lint:fix": "eslint --fix --cache --ext .ts,.tsx --format=pretty ./src && npm run lint:style",
        "lint:js": "eslint --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src",
        "lint:prettier": "prettier --check \"src/**/*\" --end-of-line auto",
        "lint:style": "stylelint --fix \"src/**/*.less\" --syntax less",
        "test": "jest --watch",
        "test:ci": "jest --ci",
        "docker-run": "docker run -p 3000:3000 nextjs-docker",
        "docker-build": "docker build -t nextjs-docker .",
        "ycom": "yalc add components-next --no-pure",
        "ycom-update": "rm -rf yalc.lock && yalc update components-next --no-pure",
        "clean:yalc": "rm -rf .yalc "
    },
    "dependencies": {
        "@ant-design/icons": "^4.7.0",
        "@apollo/client": "^3.4.17",
        "@hookstate/core": "^3.0.13",
        "@hookstate/persistence": "^3.0.0",
        "ahooks": "^3.0.1",
        "autoprefixer": "^10.4.0",
        "axios": "^0.24.0",
        "classnames": "^2.3.1",
        "components-next": "file:.yalc/components-next",
        "dayjs": "^1.10.7",
        "graphql": "^16.0.1",
        "graphql-tag": "^2.12.6",
        "lodash": "^4.17.21",
        "next": "^12.0.1",
        "next-with-apollo": "^5.2.1",
        "nprogress": "^0.2.0",
        "postcss": "^8.3.11",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-i18next": "11.11.1",
        "tailwind-override": "^0.5.0",
        "tailwindcss": "^3.0.2"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^2.2.2",
        "@graphql-codegen/import-types-preset": "^2.1.7",
        "@graphql-codegen/introspection": "^2.1.0",
        "@graphql-codegen/plugin-helpers": "^2.3.1",
        "@graphql-codegen/typescript": "^2.3.1",
        "@graphql-codegen/typescript-operations": "^2.2.0",
        "@graphql-codegen/typescript-react-apollo": "^3.2.1",
        "@hookstate/devtools": "^3.0.1",
        "@next/eslint-plugin-next": "^12.0.3",
        "@types/lodash": "^4.14.176",
        "@types/node": "^16.11.7",
        "@types/nprogress": "^0.2.0",
        "@types/react": "^17.0.34",
        "@types/react-dom": "^17.0.11",
        "@types/tailwindcss": "^2.2.4",
        "@umijs/fabric": "^2.8.1",
        "dotenv": "^10.0.0",
        "i18next": "21.4.2",
        "i18next-browser-languagedetector": "^6.1.2",
        "next-apollo": "^5.0.7",
        "typescript": "4.4.4",
        "webpack": "^5.63.0"
    },
    "engines": {
        "yarn": "^1.22.10"
    }
}
